  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\lion.baselib\lion.baselib.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

